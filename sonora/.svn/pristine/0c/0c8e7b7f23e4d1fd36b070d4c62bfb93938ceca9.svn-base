package br.edu.ifsc.sonora.dao;

import br.edu.ifsc.sonora.entidade.Localizacao;
import javax.annotation.PostConstruct;
import javax.inject.Inject;

/**
 *
 * @author aluno
 */
public class LocalizacaoDAO extends AbstractNoSQLDAO<Localizacao>{
    
    @Inject
    private MongoConnectionFactory mongoFactory;

    public LocalizacaoDAO() {
        super();
    }

    @PostConstruct
    public void init() {
        init(Localizacao.class);
    }

    @Override
    public Localizacao newInstance() {
        return new Localizacao();
    }

    @Override
    public MongoConnectionFactory getMongoFactory() {
        return mongoFactory;
    }

    public Localizacao findByRfid(String nome) throws Exception {

        Localizacao res = getObject("nome", nome);
        if (res != null) {
            return res;
        }
        throw new Exception("Nome NÃ£o encontrado");
    }
}
