package br.edu.ifsc.sonora.dao;

import br.edu.ifsc.sonora.entidade.Configuration;
import javax.annotation.PostConstruct;
import javax.enterprise.context.ApplicationScoped;
import javax.inject.Inject;

/**
 *
 * @author renato
 */
@ApplicationScoped
public class ConfigurationDAO extends AbstractNoSQLDAO<Configuration> {

    @Inject
    private MongoConnectionFactory mongoFactory;

    public ConfigurationDAO() {
        super();
    }

    @PostConstruct
    public void init() {
        init(Configuration.class);
    }

    @Override
    public Configuration newInstance() {
        return new Configuration();
    }

    @Override
    public MongoConnectionFactory getMongoFactory() {
        return mongoFactory;
    }
}
