package br.edu.ifsc.sonora.dao;

import br.edu.ifsc.sonora.entidade.Usuario;
import javax.annotation.PostConstruct;
import javax.inject.Inject;

/**
 *
 * @author aluno
 */
public class UsuarioDAO extends AbstractNoSQLDAO<Usuario> {

    @Inject
    private MongoConnectionFactory mongoFactory;

    public UsuarioDAO() {
        super();
    }

    @PostConstruct
    public void init() {
        init(Usuario.class);
    }

    @Override
    public Usuario newInstance() {
        return new Usuario();
    }

    @Override
    public MongoConnectionFactory getMongoFactory() {
        return mongoFactory;
    }

    public Usuario findByRfid(String email) throws Exception {

        Usuario res = getObject("email", email);
        if (res != null) {
            return res;
        }
        throw new Exception("Email NÃ£o encontrado");
    }
    
}
