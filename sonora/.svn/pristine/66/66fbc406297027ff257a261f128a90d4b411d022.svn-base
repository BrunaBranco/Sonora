package br.edu.ifsc.sonora.dao;

import br.edu.ifsc.sonora.entidade.Sonora;
import javax.annotation.PostConstruct;
import javax.enterprise.context.ApplicationScoped;
import javax.inject.Inject;

/**
 *
 * @author renato
 */
@ApplicationScoped
public class SonoraDAO extends AbstractNoSQLDAO<Sonora> {

    @Inject
    private MongoConnectionFactory mongoFactory;

    public SonoraDAO() {
        super();
    }

    @PostConstruct
    public void init() {
        init(Sonora.class);
    }

    @Override
    public Sonora newInstance() {
        return new Sonora();
    }

    @Override
    public MongoConnectionFactory getMongoFactory() {
        return mongoFactory;
    }

    public Sonora findByRfid(String rfid) throws Exception {

        Sonora res = getObject("rfid", rfid);
        if (res != null) {
            return res;
        }
        throw new Exception("RFID NÃ£o encontrado");
    }

}
