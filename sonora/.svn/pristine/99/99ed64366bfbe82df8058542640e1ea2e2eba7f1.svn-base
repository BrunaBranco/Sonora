package br.edu.ifsc.sonora.service;

import br.edu.ifsc.sonora.dao.LocalizacaoDAO;
import br.edu.ifsc.sonora.entidade.Localizacao;
import br.edu.ifsc.sonora.util.Notificacao;
import java.util.List;
import java.util.Map;
import java.util.logging.Level;
import java.util.logging.Logger;
import javax.annotation.PostConstruct;
import javax.enterprise.context.ApplicationScoped;
import javax.inject.Inject;
import javax.inject.Named;

/**
 *
 * @author aluno
 */
@Named
@ApplicationScoped
public class LocalizacaoController extends AbstractNoSQLController<Localizacao, LocalizacaoDAO>{
    
    @Inject
    private LocalizacaoDAO dao;
    @Inject
    private ConfigurationController configurationController;

    private String nome;

    public String getNome() {
        return nome;
    }

    public void setNome(String nome) {
        this.nome = nome;
    }

    @PostConstruct
    @Override
    public void init() {
        super.init();
    }

    @Override
    public LocalizacaoDAO getDao() {
        return dao;
    }

    @Override
    public List<Localizacao> getAll() {
        return super.getAll();
    }

    @Override
    public Localizacao newInstance() {
        return new Localizacao();
    }

    @Override
    public String getModule() {
        return "Localizacao";
    }

    public void consulta() {
        try {
            Map map = Notificacao.getMapJson(configurationController.getAtual().getIpLocalizacao() + "/sonora/tag/" + nome);
            String res = (String) map.get("descricao");
            Notificacao.callUrl(configurationController.getAtual().getIpLocalizacao() + "/talk/" + res);

        } catch (Exception ex) {
            Logger.getLogger(LocalizacaoController.class.getName()).log(Level.SEVERE, null, ex);
        }

    }
}
