<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:b="http://bootsfaces.net/ui"
      xmlns:f="http://java.sun.com/jsf/core"
      xmlns:h="http://java.sun.com/jsf/html"
      xmlns:ui="http://java.sun.com/jsf/facelets"
      xmlns:p="http://primefaces.org/ui">
    <ui:decorate template="template/templatelogin.xhtml">
        <ui:define name="centro">
            <h:form  id="form">
                <b:container fluid="true"> 
                    <b:row class="center-block">
                        <b:column medium-screen="12" class="center-block">
                            <p:messages id="messages" showDetail="true" autoUpdate="true" closable="false"/>
                        </b:column>
                    </b:row>
                    <b:row>
                        <b:column medium-screen="12"   >
                            <b:column col-xs="12" col-sm="6" col-md="6">
                                <p:row>
                                    <b:column medium-screen="12"> 
                                        <b:row >
                                            <h1>SONORA</h1>
                                        </b:row>
                                    </b:column>
                                </p:row>

                            </b:column>
                        </b:column>
                    </b:row>
                    <center><b:panel id="main" title="Recuperar Senha" collapsible="false" >
                            <b:row>
                                <b:column span="4" offset="4">
                                    <b:inputText placeholder="e-mail"  value="#{usuarioController.atual.login}">
                                        <f:facet name="prepend">             
                                            <b:iconAwesome name="fa fa-at"></b:iconAwesome>
                                        </f:facet>

                                    </b:inputText>
                                </b:column>
                            </b:row>
                            <b:row>
                                <b:column span="4" offset="4">
                                    <b:commandButton value="Enviar" look="primary" style="width:100%"
                                                     action="#{usuarioController.saveAtual()}"
                                                     update=":form:main"
                                                     />
                                </b:column>
                            </b:row>
                        </b:panel> </center>
                </b:container>
            </h:form>
        </ui:define>
    </ui:decorate>
</html>
