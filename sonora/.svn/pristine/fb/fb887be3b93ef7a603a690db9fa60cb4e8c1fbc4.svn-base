package br.edu.ifsc.sonora.service;

import br.edu.ifsc.sonora.dao.ConfigurationDAO;
import br.edu.ifsc.sonora.entidade.Configuration;
import java.util.List;
import javax.annotation.PostConstruct;
import javax.enterprise.context.ApplicationScoped;
import javax.inject.Inject;
import javax.inject.Named;

/**
 *
 * @author renato
 */
@Named
@ApplicationScoped
public class ConfigurationController extends AbstractNoSQLController<Configuration, ConfigurationDAO> {

    @Inject
    private ConfigurationDAO dao;

    @PostConstruct
    @Override
    public void init() {
        super.init();
        setAtual(getLast());
    }

    @Override
    public ConfigurationDAO getDao() {
        return dao;
    }

    @Override
    public List<Configuration> getAll() {
        return super.getAll();
    }

    @Override
    public Configuration newInstance() {
        return new Configuration();
    }

    @Override
    public String getModule() {
        return "Configuration";
    }

    @Override
    public void saveAtual() throws Exception {
        super.saveAtual(); //To change body of generated methods, choose Tools | Templates.
        setAtual(getLast());
    }

    @Override
    public Configuration getAtual() {
        return super.getAtual(); //To change body of generated methods, choose Tools | Templates.
    }

}
